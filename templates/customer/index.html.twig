{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table-title">
                <h1>Customers</h1>
                <a href="{{ path('app_customer_new') }}" class="create">Create new</a>
            </div>
            <div class="table">
                <div class="row header">
                    <div class="cell">
                        #
                    </div>
                    <div class="cell">
                        Name
                    </div>
                    <div class="cell">
                        Lastname
                    </div>
                    <div class="cell">
                        Phone Number
                    </div>
                    <div class="cell">
                        Email
                    </div>
                    <div class="cell">
                        actions
                    </div>
                </div>
                {% for customer in customers %}
                    <div class="row">
                        <div class="cell" data-title="ID">
                            {{ customer.id }}
                        </div>
                        <div class="cell" data-title="Name">
                            {{ customer.name }}
                        </div>
                        <div class="cell" data-title="Lastname">
                            {{ customer.lastname }}
                        </div>
                        <div class="cell" data-title="Phone Number">
                            {{ customer.phoneNumber }}
                        </div>
                        <div class="cell" data-title="Email">
                            {{ customer.email }}
                        </div>
                        <div class="cell">
                            <a href="{{ path('app_customer_show', {'id': customer.id}) }}">show</a>
                            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>
                        </div>
                    </div>
                {% else %}
                    <div class="cell">
                        <div>no records found</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}