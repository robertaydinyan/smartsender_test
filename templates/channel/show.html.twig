{% extends 'base.html.twig' %}

{% block title %}Channel{% endblock %}

{% block body %}
    <h1>Channel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ channel.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ channel.name }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ channel.enabled }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ channel.email }}</td>
            </tr>
            <tr>
                <th>Sms</th>
                <td>{{ channel.sms }}</td>
            </tr>
            <tr>
                <th>Webpush</th>
                <td>{{ channel.webpush }}</td>
            </tr>
            <tr>
                <th>Telegram</th>
                <td>{{ channel.telegram }}</td>
            </tr>
            <tr>
                <th>Viber</th>
                <td>{{ channel.viber }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_channel_index') }}">back to list</a>

    <a href="{{ path('app_channel_edit', {'id': channel.id}) }}">edit</a>

    {{ include('channel/_delete_form.html.twig') }}
{% endblock %}
